<Page loaded="pageLoaded " class="page bgImage" xmlns="http://www.nativescript.org/tns.xsd" actionBarHidden="true">
	<GridLayout rows="auto,*" columns="*" class="bgColorControl">
		<StackLayout row="0" col="0">
			<Label text="GarÃ§om Digital" class="m-t-30 m-b-30 text-center menuTitle" textWrap="true" />
